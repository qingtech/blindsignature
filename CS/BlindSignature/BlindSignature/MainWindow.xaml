<Window x:Class="BlindSignature.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800">
    <Grid RenderTransformOrigin="0.5,0.5" Margin="0,0,-30,-167" Width="800" Height="600">
        <Grid.RowDefinitions>
            <RowDefinition Height="294*"/>
            <RowDefinition Height="144*"/>
            <RowDefinition Height="49*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="53*"/>
            <ColumnDefinition Width="117*"/>
            <ColumnDefinition Width="93*"/>
            <ColumnDefinition Width="160*"/>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition Width="102*"/>
            <ColumnDefinition Width="55*"/>
            <ColumnDefinition Width="252*"/>
            <ColumnDefinition Width="90*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="-0.504"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>
        <TabControl x:Name="tabcontrol1" TabStripPlacement="Left" HorizontalAlignment="Left" Height="500" Margin="10,-52,0,0" VerticalAlignment="Top" Width="700" Grid.ColumnSpan="9" Grid.RowSpan="2" Grid.Column="1">
            <TabItem x:Name="tab_item_message_blind" Header="消息盲化" RenderTransformOrigin="-0.229,2.867" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="100" Height="90">
                <Grid Background="#FFE5E5E5" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            </TabItem>
            <TabItem x:Name="tab_item_blind_signature" Header="盲签名" Margin="-2,-2,-1,-1" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="100" Height="90">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem x:Name="tab_item_deblind" Header="解盲" RenderTransformOrigin="-0.229,2.867" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="100" Height="90">
                <Grid Background="#FFE5E5E5" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            </TabItem>
            <TabItem x:Name="tab_item_verify" Header="验证" Margin="-2,-2,-1,-1" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="100" Height="90">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
    
